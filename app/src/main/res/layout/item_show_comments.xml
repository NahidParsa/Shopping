<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    >
    <RelativeLayout
        android:id="@+id/xRL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rating_itemShowComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_offers_percentage"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_alignParentStart="true"
        android:text="1.8"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
       android:id="@+id/titleView_itemShowComments"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@id/rating_itemShowComments"
       android:layout_marginStart="8dp"
       android:text="dislike"
       android:textSize="18sp"
       android:textColor="@color/colorTextColor"
       android:layout_marginEnd="8dp"
       android:layout_marginTop="16dp"
       android:paddingBottom="4dp"
       android:paddingTop="4dp"
       android:paddingRight="8dp"
       android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/date_itemShowComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2021.06.08"
        android:textColor="@color/colorTextColor"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="4dp"
       android:paddingTop="4dp"
       android:paddingRight="8dp"
       android:paddingLeft="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/xRL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xRL1"
        >
    <ImageView
        android:id="@+id/xEmg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:layout_marginEnd="8dp"
         android:layout_marginTop="16dp"
         android:paddingBottom="4dp"
         android:paddingTop="4dp"
         android:paddingRight="8dp"
         android:paddingLeft="8dp"
        />

        <TextView
           android:id="@+id/email_itemShowComments"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_toEndOf="@id/xEmg1"
            android:layout_marginStart="8dp"
           android:text="parsapage@gmail.com"
            android:textSize="18sp"
           android:textColor="@color/colorTextColor"
           android:layout_marginEnd="8dp"
           android:layout_marginTop="16dp"
           android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:paddingRight="8dp"
          android:paddingLeft="8dp"/>


    </RelativeLayout>

    <View
        android:id="@+id/XV1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorAccent"
        android:layout_margin="8dp"
        android:layout_below="@id/xRL2"
    />


    <TextView
       android:id="@+id/description_itemShowComments"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_below="@id/XV1"
        android:layout_marginStart="8dp"
       android:text="i love the product id the best"
        android:textSize="18sp"
       android:textColor="@color/colorTextColor"
       android:layout_marginEnd="8dp"
       android:layout_marginTop="16dp"
       android:paddingBottom="4dp"
      android:paddingTop="4dp"
      android:paddingRight="8dp"
      android:paddingLeft="8dp"/>

<RelativeLayout
    android:id="@+id/xRL4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/description_itemShowComments"
    >
    <ImageView
        android:id="@+id/xEmg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upward"
        android:layout_marginEnd="8dp"
         android:layout_marginTop="16dp"
         android:paddingBottom="4dp"
         android:paddingTop="4dp"
         android:paddingRight="8dp"
         android:paddingLeft="8dp"
        app:tint="@color/colorGreen" />

        <TextView
           android:id="@+id/like_itemShowComments"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_toEndOf="@id/xEmg2"
            android:layout_marginStart="8dp"
           android:text="positive"
            android:textSize="18sp"
           android:textColor="@color/colorTextColor"
           android:layout_marginEnd="8dp"
           android:layout_marginTop="16dp"
           android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:paddingRight="8dp"
          android:paddingLeft="8dp"/>

</RelativeLayout>


<RelativeLayout
    android:id="@+id/xRL5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/xRL4"
    >
    <ImageView
        android:id="@+id/xEmg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downward"
        android:layout_marginEnd="8dp"
         android:layout_marginTop="16dp"
         android:paddingBottom="4dp"
         android:paddingTop="4dp"
         android:paddingRight="8dp"
         android:paddingLeft="8dp"
        app:tint="@color/colorRed" />

        <TextView
           android:id="@+id/dislike_itemShowComments"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_toEndOf="@id/xEmg3"
            android:layout_marginStart="8dp"
           android:text="negative"
            android:textSize="18sp"
           android:textColor="@color/colorTextColor"
           android:layout_marginEnd="8dp"
           android:layout_marginTop="16dp"
           android:paddingBottom="4dp"
          android:paddingTop="4dp"

            />

</RelativeLayout>


    <View
        android:id="@+id/XV2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorIconNavigation"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/xRL5"
    />

</RelativeLayout>

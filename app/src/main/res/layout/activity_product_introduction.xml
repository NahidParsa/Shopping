<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout_productIntroductionActivity"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPinkDark"
        android:layoutDirection="ltr">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_productIntroductionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/back_productIntroductionActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back"
            android:contentDescription="@string/shopping_card" />

            <TextView
                android:id="@+id/title_productIntroductionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="لوازم آرایشی و بهداشتی"
                android:textStyle="bold"
                android:textSize="24sp"
                />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerIntroduction_productIntroductionActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbarLayout_productIntroductionActivity"

        />


</RelativeLayout>

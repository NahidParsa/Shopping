<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/bg_faq_question">

    <LinearLayout
        android:id="@+id/llQuestion_faqItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="10"
        >
    <TextView
        android:id="@+id/question_faqItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:text="jkjlkjljlkjljlk"
        android:layout_margin="8dp"
        android:textColor="@color/colorRed"
        />
    <ImageView
        android:id="@+id/plus_faqItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/add"
        app:tint="@color/colorRed"

        android:layout_gravity="center"
        android:layout_margin="8dp"
        />

    </LinearLayout>
<TextView
    android:id="@+id/answer_faqItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ferfereeefer"
    android:layout_below="@id/llQuestion_faqItem"
    android:background="@drawable/bg_faq_answer"
    android:lineSpacingExtra="4dp"
    android:layout_margin="8dp"
    android:textColor="@color/colorTextColor"
    android:visibility="gone"
    />

</RelativeLayout>

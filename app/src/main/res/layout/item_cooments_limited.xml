<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_itemCommentsLimited"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorBackground"
    android:backgroundTint="@color/colorBackground"
    android:elevation="16dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/xRL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleView_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="dislike"
                android:textColor="@color/colorTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="2021.06.08"
                android:textColor="@color/colorTextColor" />
        </RelativeLayout>

        <View
            android:id="@+id/XV1"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@id/xRL1"
            android:layout_margin="8dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/description_itemCommentsLimited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/XV1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:maxLines="4"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="i love the product id the best"
            android:textColor="@color/colorTextColor"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/xRL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_itemCommentsLimited">

            <ImageView
                android:id="@+id/likeImg_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:src="@drawable/like"
                android:visibility="gone"
                app:tint="@color/colorGreen" />

            <ImageView
                android:id="@+id/dislikeImg_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:src="@drawable/dislike"
                app:tint="@color/colorRed" />

            <TextView
                android:id="@+id/positive_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="positive | negative"
                android:textColor="@color/colorTextColor"
                android:textSize="18sp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/xRL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xRL4">

            <ImageView
                android:id="@+id/xEmg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/email_itemCommentsLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/xEmg1"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="parsapage@gmail.com"
                android:textColor="@color/colorTextColor"
                android:textSize="18sp" />


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

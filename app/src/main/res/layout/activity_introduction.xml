<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activity.IntroductionActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_introductionActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_introductionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        app:tabIndicatorHeight="0dp"
        app:tabBackground="@drawable/bg_tabs_circle"

        android:background="@color/colorBackground"
        app:tabIndicator="@color/colorBackground"
        app:tabGravity="center"
        />
    <TextView
        android:id="@+id/next_introductionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/colorTextColor"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/previous_introductionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textColor="@color/colorTextColor"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:layout_margin="8dp"
        />

    <Button
        android:id="@+id/start_introductionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@color/colorBackground"
        android:textStyle="bold"
        android:layout_above="@id/tabLayout_introductionActivity"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorWUAPinkDark"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="320dp"
    android:layout_marginStart="4dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/colorBackground"
    android:background="@color/colorBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:backgroundTint="@color/colorBackground"
        android:background="@color/colorBackground"
        >

        <ImageView
            android:id="@+id/imgPopularGoods_item0PopularDetailCategoryActivity"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorBackground"
            android:contentDescription="@string/imgAmazingGoods" />

        <TextView
            android:id="@+id/txtNamePopularGoods_item0PopularDetailCategoryActivity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@id/imgPopularGoods_item0PopularDetailCategoryActivity"
            />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNamePopularGoods_item0PopularDetailCategoryActivity"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

        <TextView
             android:id="@+id/realPrice_item0PopularDetailCategoryActivity"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textColor="@color/colorIconNavigation"
             android:textStyle="bold"
             android:paddingLeft="8dp"
             android:paddingBottom="1dp"
             android:paddingTop="2dp"
             android:text="550000"
             android:layout_marginTop="8dp"
            android:gravity="center" />


            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorIconNavigation"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:layout_marginTop="8dp"
                android:text="$"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>


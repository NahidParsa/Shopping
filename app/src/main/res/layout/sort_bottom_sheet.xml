<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_sortBottomSheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >

        <RadioButton
            android:id="@+id/newest_sortBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newest"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            style="@style/RadioButton"
            />

        <View
            android:id="@+id/XV1"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorTextColor_gray"
            android:layout_margin="8dp"
            />
        <RadioButton
            android:id="@+id/priceLowToHigh_sortBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Low To High"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            style="@style/RadioButton"
            />

        <View
            android:id="@+id/XV2"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorTextColor_gray"
            android:layout_margin="8dp"
            />
        <RadioButton
            android:id="@+id/priceHighToLow_sortBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price High To Low"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            style="@style/RadioButton"
            />

        <View
            android:id="@+id/XV3"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorTextColor_gray"
            android:layout_margin="8dp"
            />
        <RadioButton
            android:id="@+id/MostPopular_sortBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Popular"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            style="@style/RadioButton"
            />
        <View
            android:id="@+id/XV4"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorTextColor_gray"
            android:layout_margin="8dp"
            />
        <RadioButton
            android:id="@+id/Bestselling_sortBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bestselling"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            style="@style/RadioButton"
            />
        <View
            android:id="@+id/XV5"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorTextColor_gray"
            android:layout_margin="8dp"
            />

    </RadioGroup>

</LinearLayout>

<RelativeLayout
    android:id="@+id/xx1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    >

    <RelativeLayout
        android:id="@+id/RL0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <ImageView
            android:id="@+id/xNameImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_centerVertical="true"
            app:tint="@color/colorPinkDark"
            />
        <TextView
            android:id="@+id/name_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="parsapage"
            android:textSize="18sp"
            android:textColor="@color/colorTextColor_gray"
            android:layout_toEndOf="@id/xNameImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/RL0"
        >

        <ImageView
            android:id="@+id/xEmailImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email"
            android:layout_centerVertical="true"
            app:tint="@color/colorPinkDark"
            />
        <TextView
            android:id="@+id/email_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="parsapage@gmail.com"
            android:textSize="18sp"
            android:textColor="@color/colorTextColor_gray"
            android:layout_toEndOf="@id/xEmailImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/RL1"
        >

    <ImageView
        android:id="@+id/xPhoneImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_centerVertical="true"
        app:tint="@color/colorPinkDark"
        />
    <TextView
        android:id="@+id/phone_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="09156597897"
        android:textSize="18sp"
        android:textColor="@color/colorTextColor_gray"
        android:layout_toEndOf="@id/xPhoneImg"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"

        />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/RL3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/RL2"
            android:layout_marginTop="4dp"
            >

        <ImageView
            android:id="@+id/xLocationImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            app:tint="@color/colorPinkDark"
            />
        <TextView
            android:id="@+id/address_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="18sp"
            android:text="iran"
            android:textColor="@color/colorTextColor_gray"
            android:layout_toEndOf="@id/xLocationImg"
            android:layout_marginStart="16dp"
            />



        </RelativeLayout>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/xLL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xx1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="16dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBagShop_profileFragment"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorPinkDark"
            android:backgroundTint="@color/colorPinkDark"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="8dp"
            >
            <RelativeLayout
                android:id="@+id/RLBagShop_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bag Shop"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorWhite"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/shopping_bag"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    app:tint="@color/colorBlue" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFavorite_profileFragment"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorPinkDark"
            android:backgroundTint="@color/colorPinkDark"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="8dp"
            >
            <RelativeLayout
                android:id="@+id/RLFavoriteList_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite List"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorWhite"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/favorite"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    app:tint="@color/colorBlue" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOrderList_profileFragment"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorPinkDark"
            android:backgroundTint="@color/colorPinkDark"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="8dp"
            >
            <RelativeLayout
                android:id="@+id/RLOrderList_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order List"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorWhite"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/order"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    app:tint="@color/colorBlue" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/xLL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xLL1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="16dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAsk_profileFragment"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@color/colorPinkDark"
                android:backgroundTint="@color/colorPinkDark"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_marginEnd="8dp"
                >
                <RelativeLayout
                    android:id="@+id/RLFAQ_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/question"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"
                        app:tint="@color/colorBlue" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewExit_profileFragment"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@color/colorPinkDark"
                android:backgroundTint="@color/colorPinkDark"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_marginEnd="8dp"
                >
                <RelativeLayout
                    android:id="@+id/RLExit_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorWhite"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/exit"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        app:tint="@color/colorBlue" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

</RelativeLayout>

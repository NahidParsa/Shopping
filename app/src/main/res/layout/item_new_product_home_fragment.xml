<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorBackground"
    >
    <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:layout_alignParentLeft="true"
          />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorPrimary"
              android:layout_alignParentBottom="true"
          />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorBackground">



        <ImageView
            android:id="@+id/imgNewProduct_itemNewProductHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:background="@color/colorBackground"
            android:scaleType="fitCenter"
            android:contentDescription="@string/imgAmazingGoods" />

        <TextView
            android:id="@+id/TitleNewProduct_itemNewProductHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layoutDirection="rtl"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@id/imgNewProduct_itemNewProductHomeFragment"
            />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TitleNewProduct_itemNewProductHomeFragment"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
             android:id="@+id/newProductPrice_itemNewProductHomeFragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textColor="@color/colorAccent"
             android:textStyle="bold"
            android:padding="2dp"
             android:text="550000"
             android:layout_marginTop="8dp"
             />

            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="8dp"
                android:text="تومان"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


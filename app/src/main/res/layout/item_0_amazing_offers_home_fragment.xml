<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="320dp"
    android:layoutDirection="rtl"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="16dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/colorBackground"
    android:background="@color/colorBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:backgroundTint="@color/colorBackground"
        android:background="@color/colorBackground"
        >

        <ImageView
            android:id="@+id/imgAmazingGoods_item0AmazingOfferHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorBackground"
            android:contentDescription="@string/imgAmazingGoods" />

        <TextView
            android:id="@+id/txtNameAmazingGoods_item0AmazingOfferHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@id/imgAmazingGoods_item0AmazingOfferHomeFragment"
            />
        <TextView
            android:id="@+id/offPercentage_item0AmazingOfferHomeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="1dp"
            android:paddingTop="2dp"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="27%"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_offers_percentage"
            android:layout_below="@id/txtNameAmazingGoods_item0AmazingOfferHomeFragment"
            />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNameAmazingGoods_item0AmazingOfferHomeFragment"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/offPercentage_item0AmazingOfferHomeFragment"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

        <TextView
             android:id="@+id/offPrice_item0AmazingOfferHomeFragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textColor="@color/colorAccent"
             android:textStyle="bold"
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingBottom="1dp"
             android:paddingTop="2dp"

             android:text="550000"
             android:layout_marginTop="8dp"
             />
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:layout_marginTop="8dp"
                android:text="تومان"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal">

        <TextView
             android:id="@+id/realPrice_item0AmazingOfferHomeFragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textColor="@color/colorIconNavigation"
             android:textStyle="bold"
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingBottom="1dp"
             android:paddingTop="2dp"
             android:text="550000"
            android:layout_alignParentEnd="true"
             android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
             />


            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorIconNavigation"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:layout_marginTop="8dp"
                android:text="تومان"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>

